<Window x:Class="UserInterface.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UserInterface"
        mc:Ignorable="d"
        
        Height="150" 
        Width="400"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterOwner"
        WindowStyle="SingleBorderWindow"
        ShowInTaskbar="True"
        Topmost="False"
        Title="{Binding Progress, StringFormat={}{0:F0}% completo}"
        >
    <Grid>
        <Grid Margin="10" Height="50">
            <!-- ProgressBar -->
            <ProgressBar 
            HorizontalAlignment="Stretch"
            VerticalAlignment="Center"
            Height="18"
            Minimum="0"
            Maximum="100"
            Value="{Binding Progress}"
        />

            <!-- Porcentagem centralizada na ProgressBar -->
            <TextBlock 
            Text="{Binding Progress, StringFormat={}{0:F0}%}" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Center"
            Foreground="Black"
        />
        </Grid>
        <Grid Margin="10,10,10,10">
            <!-- Label Tempo Restante -->
            <TextBlock 
            Text="{Binding TempoRestante, StringFormat=Tempo restante: {0}}" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top"
            />

            <Grid Margin="0,55,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <!-- Status -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- Botão -->
                </Grid.ColumnDefinitions>

                <!-- Status do processamento Python -->
                <TextBlock
                Grid.Column="0"
                Text="{Binding Status_Python}"
                TextWrapping="Wrap"
                TextTrimming="CharacterEllipsis"
                MaxHeight="40"
                VerticalAlignment="Top"
                Margin="0,5,5,0"/>

                <!-- Botão Cancelar -->
                <Button
                Grid.Column="1"
                Content="Cancelar"
                Width="80"
                Height="25"
                VerticalAlignment="Bottom"
                Command="{Binding CancelCommand}" />
            </Grid>
        </Grid>
    </Grid>

</Window>
