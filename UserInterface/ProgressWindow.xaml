<Window x:Class="UserInterface.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UserInterface"
        mc:Ignorable="d"
        
        Height="150" 
        Width="400"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterOwner"
        WindowStyle="SingleBorderWindow"
        ShowInTaskbar="True"
        Topmost="False"
        Title="{Binding Progress, StringFormat={}{0:F0}% completo}"
        >
    <Grid>
        <!-- Container da ProgressBar e do texto -->
        <Grid Margin="10" Height="50">
            <!-- ProgressBar -->
            <ProgressBar 
            HorizontalAlignment="Stretch"
            VerticalAlignment="Center"
            Height="18"
            Minimum="0"
            Maximum="100"
            Value="{Binding Progress}"
        />

            <!-- Texto centralizado -->
            <TextBlock 
            Text="{Binding Progress, StringFormat={}{0:F0}%}" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Center"
            Foreground="Black"
        />
        </Grid>

        <!-- Label Tempo Restante -->
        <TextBlock 
        Text="{Binding TempoRestante, StringFormat=Tempo restante: {0}}" 
        HorizontalAlignment="Left" 
        VerticalAlignment="Top"
        Margin="10,10,0,0"
    />

        <!-- Botão Cancelar -->
        <Button Content="Cancelar"
            Width="80"
            Height="25"
            VerticalAlignment="Bottom"
            HorizontalAlignment="Right"
            Margin="0,0,10,10"
            Command="{Binding CancelCommand}" />
    </Grid>

</Window>
