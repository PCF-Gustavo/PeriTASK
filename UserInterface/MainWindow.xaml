<Window x:Class="UserInterface.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UserInterface"
        mc:Ignorable="d"
        Title="PeriTASK" Height="200" Width="400"
        ResizeMode="NoResize"
        >
    <Grid Margin="20,20,20,20">
        <Button x:Name="button_ok" Content="OK" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="Button_ok_Click" Width="100" Height="20"/>
        <ComboBox x:Name="ComboBox1" 
                  HorizontalAlignment="Left" 
                  VerticalAlignment="Top" 
                  Width="300" 
                  IsDropDownOpen="True"
                  SelectedIndex="0"
                  >
            <ComboBoxItem Content="Imprimir caminhos em .txt" />
            <ComboBoxItem Content="Imprimir tabela de informações em .csv" />
        </ComboBox>
    </Grid>
</Window>
